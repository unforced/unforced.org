---
layout: base.njk
title: Drafts
permalink: /drafts/index.html
---
<section class="archive">
  <header class="archive__header">
    <h1 class="archive__title">Drafts</h1>
    <p class="archive__description">Works in progress. Shared for feedback, not finished.</p>
  </header>

  {% set currentYear = "" %}
  <div class="archive__posts">
    {%- for post in collections.drafts -%}
      {% set postYear = post.date | getYear %}
      {% if postYear != currentYear %}
        {% set currentYear = postYear %}
        <h2 class="archive__year">{{ currentYear }}</h2>
      {% endif %}
      <article class="archive__post">
        <time class="archive__date" datetime="{{ post.date | isoDate }}">{{ post.date | formatDate }}</time>
        <a href="{{ post.url }}" class="archive__link">{{ post.data.title }}</a>
      </article>
    {%- endfor -%}
  </div>
</section>
