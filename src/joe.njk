<script>
const JoeReader = (() => {
  let chapters = [];
  let currentChapter = null;
  let timestamps = null;
  let audio = null;
  let activePara = null;
  let userScrolling = false;
  let scrollTimer = null;
  let initialized = false;

  // ---- Initialization ----

  async function init() {
    if (initialized) return;
    initialized = true;

    audio = new Audio();
    audio.addEventListener('timeupdate', onTimeUpdate);
    audio.addEventListener('ended', onChapterEnded);
    audio.addEventListener('loadedmetadata', () => {
      document.getElementById('joe-time-total').textContent = fmtTime(audio.duration);
    });

    // Detect user scrolling so we pause auto-scroll during it
    window.addEventListener('scroll', () => {
      userScrolling = true;
      clearTimeout(scrollTimer);
      scrollTimer = setTimeout(() => { userScrolling = false; }, 2000);
    }, { passive: true });

    // Progress bar seek
    document.getElementById('joe-progress-bar')?.addEventListener('click', onSeek);

    // Paragraph click-to-seek
    document.querySelectorAll('.joe-chapter__text p').forEach(el => {
      el.addEventListener('click', onParagraphClick);
      el.style.cursor = 'text';
    });

    // Keyboard shortcuts
    document.addEventListener('keydown', e => {
      // Ignore if focus is in an input/textarea
      if (['INPUT','TEXTAREA','SELECT'].includes(e.target.tagName)) return;
      if (e.key === ' ' && chapters.length > 0) {
        e.preventDefault();
        const player = document.getElementById('joe-player');
        if (!player.classList.contains('is-visible')) {
          startListening();
        } else {
          togglePlay();
        }
      } else if (e.key === 'ArrowLeft' && currentChapter) {
        e.preventDefault();
        prevChapter();
      } else if (e.key === 'ArrowRight' && currentChapter) {
        e.preventDefault();
        nextChapter();
      } else if (e.key === 'Escape' && currentChapter) {
        e.preventDefault();
        close();
      }
    });

    // Load chapter index
    try {
      const resp = await fetch('/audio/joe/index.json');
      const index = await resp.json();
      chapters = index.filter(c => c.status === 'ready');
      if (chapters.length > 0) {
        document.getElementById('joe-listen-btn')?.classList.remove('hidden');
        markAvailableChapters();
      }
    } catch (e) {
      console.log('Joe audio not available yet');
    }
  }

  function markAvailableChapters() {
    const availableIds = new Set(chapters.map(c => c.id));
    document.querySelectorAll('.joe-chapters-nav__list a').forEach(a => {
      const href = a.getAttribute('href');
      const id = href?.replace('#', '');
      if (id && availableIds.has(id)) {
        a.classList.add('has-audio');
      }
    });
  }

  // ---- Public API ----

  function startListening() {
    if (chapters.length === 0) return;
    showPlayer();
    // Find the chapter the user is currently looking at
    const visibleChapter = getVisibleChapter();
    const target = visibleChapter || chapters[0];
    playChapter(target.id);
  }

  function togglePlay() {
    if (!audio) return;
    audio.paused ? resumePlay() : pause();
  }

  function prevChapter() {
    if (!currentChapter) return;
    const idx = chapters.findIndex(c => c.id === currentChapter.id);
    if (idx > 0) {
      playChapter(chapters[idx - 1].id);
      scrollToChapter(chapters[idx - 1].id);
    }
  }

  function nextChapter() {
    if (!currentChapter) return;
    const idx = chapters.findIndex(c => c.id === currentChapter.id);
    if (idx < chapters.length - 1) {
      playChapter(chapters[idx + 1].id);
      scrollToChapter(chapters[idx + 1].id);
    }
  }

  function scrollToChapter(chapterId) {
    const section = document.getElementById(chapterId);
    if (section) {
      section.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  }

  function close() {
    pause();
    hidePlayer();
    clearHighlights();
  }

  // ---- Playback ----

  async function playChapter(chapterId) {
    const ch = chapters.find(c => c.id === chapterId);
    if (!ch) return;

    if (!currentChapter || currentChapter.id !== chapterId) {
      clearHighlights();
      activePara = null;
      currentChapter = ch;

      // Load timestamps
      timestamps = null;
      try {
        const resp = await fetch(ch.timestamps);
        timestamps = await resp.json();
      } catch (e) { /* no timestamps */ }

      audio.src = ch.audio;
      document.getElementById('joe-player-chapter').textContent = ch.title;
      document.getElementById('joe-time-current').textContent = '0:00';
      document.getElementById('joe-time-total').textContent = '0:00';
      document.getElementById('joe-progress-fill').style.width = '0%';
      updateChapterNav(chapterId);
    }

    audio.play();
    setPlaying(true);
  }

  function resumePlay() {
    if (!currentChapter && chapters.length > 0) {
      playChapter(chapters[0].id);
      return;
    }
    audio.play();
    setPlaying(true);
  }

  function pause() {
    audio?.pause();
    setPlaying(false);
  }

  function setPlaying(playing) {
    const playIcon = document.getElementById('joe-play-icon');
    const avatar = document.getElementById('joe-player-avatar');
    if (playing) {
      playIcon.innerHTML = '<path d=”M6 19h4V5H6v14zm8-14v14h4V5h-4z”/>';
      avatar.classList.add('is-speaking');
    } else {
      playIcon.innerHTML = '<path d=”M8 5v14l11-7z”/>';
      avatar.classList.remove('is-speaking');
    }
  }

  // ---- Time update & highlighting ----

  function onTimeUpdate() {
    if (!audio) return;
    const t = audio.currentTime;
    const dur = audio.duration || 0;

    document.getElementById('joe-time-current').textContent = fmtTime(t);
    document.getElementById('joe-progress-fill').style.width = dur ? ((t / dur) * 100) + '%' : '0%';

    if (!timestamps || !currentChapter) return;

    const para = timestamps.paragraphs.find(p => t >= p.start && t < p.end);
    if (para && para !== activePara) {
      activePara = para;
      highlightParagraph(para);
    }
  }

  function highlightParagraph(para) {
    const section = document.getElementById(currentChapter.id);
    if (!section) return;

    const paraIdx = timestamps.paragraphs.indexOf(para);
    const els = section.querySelectorAll('.joe-chapter__text p');

    // Mark text block active (dims was-spoken paragraphs)
    section.querySelector('.joe-chapter__text')?.classList.add('is-active');

    els.forEach((el, i) => {
      el.classList.remove('is-speaking');
      if (i < paraIdx) {
        el.classList.add('was-spoken');
      } else {
        el.classList.remove('was-spoken');
      }
    });

    if (els[paraIdx]) {
      els[paraIdx].classList.add('is-speaking');
      if (!userScrolling) {
        els[paraIdx].scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
    }
  }

  function clearHighlights() {
    document.querySelectorAll('.joe-chapter__text p').forEach(el => {
      el.classList.remove('is-speaking', 'was-spoken');
    });
    document.querySelectorAll('.joe-chapter__text').forEach(el => {
      el.classList.remove('is-active');
    });
  }

  function onChapterEnded() {
    const idx = chapters.findIndex(c => c.id === currentChapter?.id);
    if (idx >= 0 && idx < chapters.length - 1) {
      playChapter(chapters[idx + 1].id);
    } else {
      setPlaying(false);
    }
  }

  // ---- Seeking ----

  function onSeek(e) {
    if (!audio || !audio.duration) return;
    const bar = e.currentTarget;
    const pct = e.offsetX / bar.offsetWidth;
    audio.currentTime = pct * audio.duration;
  }

  function onParagraphClick(e) {
    if (!timestamps || !currentChapter) return;
    const section = e.target.closest('.joe-chapter');
    if (!section) return;
    const chapterId = section.id;

    // Find paragraph index
    const els = Array.from(section.querySelectorAll('.joe-chapter__text p'));
    const paraIdx = els.indexOf(e.target);
    if (paraIdx < 0) return;

    // If different chapter, load and play from this paragraph
    if (currentChapter.id !== chapterId) {
      playChapter(chapterId).then(() => seekToParagraph(paraIdx));
    } else {
      seekToParagraph(paraIdx);
    }
  }

  function seekToParagraph(idx) {
    if (!timestamps?.paragraphs[idx]) return;
    audio.currentTime = timestamps.paragraphs[idx].start;
    if (audio.paused) audio.play();
    setPlaying(true);
  }

  // ---- Chapter nav ----

  function getVisibleChapter() {
    const sections = document.querySelectorAll('.joe-chapter');
    for (const section of sections) {
      const rect = section.getBoundingClientRect();
      if (rect.top < window.innerHeight * 0.6 && rect.bottom > 0) {
        const ch = chapters.find(c => c.id === section.id);
        if (ch) return ch;
      }
    }
    return null;
  }

  function updateChapterNav(chapterId) {
    document.querySelectorAll('.joe-chapters-nav__list a').forEach(a => {
      const href = a.getAttribute('href');
      if (href === '#' + chapterId) {
        a.classList.add('is-playing');
      } else {
        a.classList.remove('is-playing');
      }
    });
  }

  // ---- Player visibility ----

  function showPlayer() {
    const player = document.getElementById('joe-player');
    player.style.display = 'block';
    // Trigger reflow so transition fires
    player.getBoundingClientRect();
    player.classList.add('is-visible');
    document.body.classList.add('joe-player-open');
  }

  function hidePlayer() {
    const player = document.getElementById('joe-player');
    player.classList.remove('is-visible');
    setTimeout(() => { player.style.display = 'none'; }, 400);
    document.body.classList.remove('joe-player-open');
  }

  // ---- Utilities ----

  function fmtTime(s) {
    if (isNaN(s)) return '0:00';
    const m = Math.floor(s / 60);
    const sec = Math.floor(s % 60);
    return `${m}:${sec.toString().padStart(2, '0')}`;
  }

  // ---- Intersection observer to auto-switch chapters ----
  function setupChapterObserver() {
    if (!('IntersectionObserver' in window)) return;
    const obs = new IntersectionObserver((entries) => {
      if (!audio || audio.paused) return;
      entries.forEach(entry => {
        if (!entry.isIntersecting) return;
        const chapterId = entry.target.id;
        const ch = chapters.find(c => c.id === chapterId);
        if (ch && currentChapter && ch.id !== currentChapter.id) {
          // User scrolled ahead manually while audio playing — load that chapter's audio
          // Only switch if the chapter has audio
        }
      });
    }, { threshold: 0.5 });

    document.querySelectorAll('.joe-chapter').forEach(s => obs.observe(s));
  }

  // Script is at bottom of DOM — init directly rather than waiting for DOMContentLoaded
  // (DOMContentLoaded may already have fired by the time this inline script runs)
  init().then(setupChapterObserver);

  return { startListening, togglePlay, prevChapter, nextChapter, close };
})();
</script>
